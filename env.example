# Production Environment Variables для Render.com

# Django Core
DEBUG=False
SECRET_KEY=your-generated-secret-key-will-be-here
DJANGO_SETTINGS_MODULE=beautyshop.settings.production
ALLOWED_HOSTS=beautyshop-django.onrender.com,beautyshop-django-*.onrender.com
CSRF_TRUSTED_ORIGINS=https://beautyshop-django.onrender.com,https://beautyshop-django-*.onrender.com

# Database (буде автоматично встановлено Render)
DATABASE_URL=postgresql://username:password@hostname:port/database

# Site URL
SITE_URL=https://beautyshop-django.onrender.com

# Email Settings для продакшену
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
EMAIL_USE_TLS=True
DEFAULT_FROM_EMAIL=noreply@beautyshop.com

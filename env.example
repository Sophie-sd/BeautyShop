# Production Environment Variables для Render.com

# Django Core
DEBUG=False
SECRET_KEY=your-generated-secret-key-will-be-here
DJANGO_SETTINGS_MODULE=beautyshop.settings.production
ALLOWED_HOSTS=beautyshop-django.onrender.com,beautyshop-django-*.onrender.com
CSRF_TRUSTED_ORIGINS=https://beautyshop-django.onrender.com,https://beautyshop-django-*.onrender.com

# Database (буде автоматично встановлено Render)
DATABASE_URL=postgresql://username:password@hostname:port/database

# Site URL
SITE_URL=https://beautyshop-django.onrender.com

# Email Settings для продакшену
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
EMAIL_USE_TLS=True
DEFAULT_FROM_EMAIL=noreply@beautyshop.com

# Cloudinary для зберігання зображень
# Зареєструйтесь на cloudinary.com та отримайте credentials
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# LiqPay для онлайн оплати
# Зареєструйтесь на liqpay.ua і отримайте ключі
LIQPAY_PUBLIC_KEY=your-liqpay-public-key
LIQPAY_PRIVATE_KEY=your-liqpay-private-key

# Автоматичний імпорт товарів при deploy на Render
# true - імпортує товари з products_data/ (JSON файли з готовими посиланнями на Cloudinary)
# false - пропускає імпорт
AUTO_IMPORT_PRODUCTS=false

# Admin credentials
ADMIN_EMAIL=admin@beautyshop.com
ADMIN_PASSWORD=ChangeMe123!
